extends ../../layouts/default

block content
	.container: .jumbotron
		h1 Место для регистрации
		p разные поля

		- var wtf = false
		form(method='post', action='/join', autocomplete='off', novalidate).auth-form
					input(type='hidden', name='action', value='join')
					input(type='hidden', name='target', value='/')
					if !wtf
						if form.error
							.flash-messages
								.alert.alert-danger
									div!= form.error.message || form.error

									//- Field Errors
									if form.error.errors && !_.isEmpty(form.error.errors)
										ul
											each error, key in form.error.errors
												li!= error.msg

					- var checkFormError = function(key) { return form.error && form.error.errors && form.error.errors[key] ? 'has-error' : null }
					.form-groups
						.form-group(class=!wtf ? checkFormError('firstname') : null)
							label(for='firstname').sr-only First name
							input(type='text', name='firstname', placeholder='First name', value=!wtf ? form.firstname : null).form-control.form-control--first
						.form-group(class=!wtf ? checkFormError('lastname') : null)
							label(for='lastname').sr-only Last name
							input(type='text', name='lastname', placeholder='Last name', value=!wtf ? form.lastname : null).form-control
						.form-group(class=!wtf ? checkFormError('email') : null)
							label(for='email').sr-only Email
							input(type='email', name='email', placeholder='Email', value=!wtf ? form.email : null).form-control
						.form-group(class=!wtf ? checkFormError('password') : null)
							label(for='password').sr-only Password
							input(type='password', name='password', placeholder='Password', value=!wtf ? form.password : null).form-control

					button(type='submit').btn.btn-block.btn-primary.btn-submit Join