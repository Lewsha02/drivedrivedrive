extends layouts/basecard
block content
	div.padding1rem
		-const date = moment(request.guest.date).format('L')
		h1 Напоминание о предстоящей поездки
		p#cardP Здравствуйте, #{request.guest.name}
		p#cardP Напоминаем Вам, что завтра состоится поездка
		div#bodyCard.padding1rem
			h2 Данные трансфера
			p#cardP отправление из #{request.guest.from}
			p#cardP прибытие в #{request.guest.to}
			p#cardP количество пассажиров #{request.guest.count}
			p#cardP цена #{request.submitedPrice.value} €(евро)
			p#cardP дата #{date}, время #{request.guest.time}
		div#bodyCard.padding1rem
			h2 Выбранный водитель
			p#cardP #{request.submitedOn.name.first} #{request.submitedOn.name.last}
			p#cardP Номер телефона: #{request.submitedOn.phone}
			p#cardP Машина: #{request.submitedOn.car.kind} #{request.submitedOn.car.model}